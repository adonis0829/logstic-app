<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage x:TypeArguments="viewModels:DashboardPageViewModel"
                       x:Class="Logistics.DriverApp.Views.DashboardPage"
                       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
                       xmlns:views="clr-namespace:Logistics.DriverApp.Views"
                       xmlns:viewModels="clr-namespace:Logistics.DriverApp.ViewModels"
                       Title="Dashboard">
    <Grid>
        <core:SfBusyIndicator IsRunning="{Binding IsLoading}"
                              IndicatorColor="Pink"
                              OverlayFill="#80000000">
        </core:SfBusyIndicator>
        <ScrollView>
            <VerticalStackLayout Spacing="10" Padding="10">
                <HorizontalStackLayout>
                    <Label Text="Truck: " />
                    <Label Text="{Binding TruckNumber}"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="0, 10">
                    <Label Text="Driver: " />
                    <Label Text="{Binding DriverName}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</views:BaseContentPage>
